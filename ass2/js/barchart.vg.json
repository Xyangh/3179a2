{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Top 20 countries with top 1000 universities in the world.",
    "data": {
      "url": "https://raw.githubusercontent.com/Xyangh/3179a2/main/ass2/data/2024_QSWorld_University_Rankings_top1000.csv"
    },
    "transform": [
      {
        "aggregate": [
          {
            "op": "count",
            "as": "Number of univeristy"
          }
        ],
        "groupby": ["Country"]
      },
      {
        "window": [{"op": "rank", "as": "rank"}],
        "sort": [{"field": "Number of univeristy", "order": "descending"}]
      },
      {
        "filter": "datum.rank <= 20"
      }
    ],
    "mark": "bar",
    "encoding": {
      "x": {
        "field": "Country",
        "type": "ordinal",
        "axis": {
          "labelAngle": -50
        },
        "sort": "-y"
      },
      "y": {
        "field": "Number of univeristy",
        "type": "quantitative"
      },
      "tooltip": [
        {
          "field": "Country",
          "type": "ordinal"
        },
        {
          "field": "Number of univeristy",
          "type": "quantitative"
        }
      ]
    }
  }