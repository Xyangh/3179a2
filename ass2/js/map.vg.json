{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://github.com/Xyangh/3179a2/tree/main/ass2/data/2024_QSWorld_University_Rankings",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "layer":[
      {
        "transform": [
          {"calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"}
        ],
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
        "encoding": {
          "tooltip": {
            "field": "note"
          }
        }
      },
      {
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/data/covid_10_10_2020.csv"
              },
              "key": "Country",
              "fields": ["Country"]
            }
          }
        ],
        "mark": {"type": "geoshape", "stroke": "white"},
        "encoding": {
          "color": {
            "field": "Country",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [10000, 100000, 500000],
              "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
            }
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "Country", "type": "quantitative"}
          ]
        }
      }
    ]
    
  }