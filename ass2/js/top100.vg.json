{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title":"Employment Outcomes and Employer Reputation of the top 100 universities in the world",
    "width": 300,
    "height": 300,
    "data": {
      "url": "https://raw.githubusercontent.com/Xyangh/3179a2/main/ass2/data/2024_QSWorld_University_Rankings_top1000.csv",
      "format": {
        "type": "csv"
      }
    },
    "transform": [
      {
        "filter": {"field": "2024 RANK", "lte": 100}
      }
    ],
    "params": [
      {
        "name": "brush",
        "select": {
          "type": "interval",
          "resolve": "union",
          "on": "[mousedown[event.shiftKey], window:mouseup] > window:mousemove!",
          "translate": "[mousedown[event.shiftKey], window:mouseup] > window:mousemove!",
          "zoom": "wheel![event.shiftKey]"
        }
      },
      {
        "name": "grid",
        "select": {
          "type": "interval",
          "resolve": "global",
          "translate": "[mousedown[!event.shiftKey], window:mouseup] > window:mousemove!",
          "zoom": "wheel![!event.shiftKey]"
        },
        "bind": "scales"
      }
    ],
    "mark": "point",
    "encoding": {
      "x": {
        "field": "Employment Outcomes Score",
        "type": "quantitative"
      },
      "y": {
        "field": "Employer Reputation Score",
        "type": "quantitative"
      },
      "color": {
        "condition": {
          "param": "brush",
          "field": "Country",
          "type": "nominal"
        },
        
        "value": "grey"
      },
      "tooltip": [
        {"field": "Institution Name", "type": "nominal"},
        {"field": "Employment Outcomes Score", "type": "quantitative"},
        {"field": "Employer Reputation Score", "type": "quantitative"},
        {"field": "Country", "type": "nominal"}
      ]
    }
  }
  