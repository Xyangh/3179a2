{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Top 20 countries with top 1000 universities in the world.",
    "data": {
      "url": "https://raw.githubusercontent.com/Xyangh/3179a2/main/ass2/data/2024_QSWorld_University_Rankings_top1000.csv"
    },
    "transform": [
      {
        "filter": "datum['2024 RANK'] <= Top_universities "
      },
      {
        "aggregate": [
          {
            "op": "count",
            "as": "Number of university"
          }
        ],
        "groupby": ["Country"]
      },
      {
        "window": [{"op": "rank", "as": "rank"}],
        "sort": [{"field": "Number of university", "order": "descending"}]
      },
      {
        "filter": "datum.rank <= Top_Countries"
      }
    ],
    "params": [
      {
        "name": "Top_universities",
        "value": 1000,
        "bind": {
          "input": "range",
          "min": 100,
          "max": 1000,
          "step": 100
        }
      },
      {
        "name": "Top_Countries",
        "value": 20,
        "bind": {
          "input": "range",
          "min": 10,
          "max": 50,
          "step": 5
        }
      }
    ],
    "mark": "bar",
    "encoding": {
      "x": {
        "field": "Country",
        "type": "ordinal",
        "axis": {
          "labelAngle": -50
        },
        "sort": "-y"
      },
      "y": {
        "field": "Number of university",
        "type": "quantitative"
      },
      "tooltip": [
        {
          "field": "Country",
          "type": "ordinal"
        },
        {
          "field": "Number of university",
          "type": "quantitative"
        }
      ]
    }
}