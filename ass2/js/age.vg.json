{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Average age of top 500 Universities by Country",
    "width": 400,
    "height": 100,
    "data": {
      "url": "https://raw.githubusercontent.com/Xyangh/3179a2/main/ass2/data/2024_QSWorld_University_Rankings_top1000.csv",
       "format": {
        "type": "csv"
      }
    },
    "transform": [
      {
        "filter": {"field": "2024 RANK", "lte": 500}
      },
      {
        "aggregate": [
          {
            "op": "count",
            "as": "Number of University"
          },
          {
            "op": "average",
            "field": "AGE",
            "as": "average_age"
          }
        ],
        "groupby": ["Country"]
      },
      {
        "filter": {"field": "Number of University", "gt": 5}
      }
    ],
    "mark": "bar",
    "encoding": {
      "x": {
        "field": "Country",
        "type": "ordinal",
        "sort": "-y",
        "axis": {
          "labelAngle": -30
        }
      },
      "y": {
        "field": "average_age",
        "type": "quantitative",
        "axis": {
          "title": "Average Age of University"
        }
      },
      "color": {"value": "#EF7C21"},
      "tooltip": [
        {"field": "Country", "type": "nominal"},
        {"field": "average_age", "type": "quantitative", "format": ".2f"},
        {"field": "Number of University", "type": "quantitative"}
      ]
    }
  }